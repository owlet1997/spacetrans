<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://carrierEdit.caption"
        focusComponent="form"
        messagesPack="com.company.st.web.screens.carrier">
    <data>
        <instance id="carrierDc"
                  class="com.company.st.entity.spaceport.Carrier">
            <view extends="_local">
                <property name="ports" view="_minimal"/>
            </view>
            <loader/>
            <collection id="portsDc" property="ports"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="carrierDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <groupBox id="portsBox" caption="msg://com.company.st.entity.spaceport/Carrier.ports">
            <table id="portsTable" dataContainer="portsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <buttonsPanel>
                    <button action="portsTable.add"/>
                    <button action="portsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
