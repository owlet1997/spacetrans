<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://wayBillEdit.caption"
        focusComponent="form"
        messagesPack="com.company.st.web.screens.waybill">
    <data>
        <instance id="wayBillDc"
                  class="com.company.st.entity.waybill.WayBill">
            <view extends="_local">
                <property name="shipper" view="_minimal"/>
                <property name="consignee" view="_minimal"/>
                <property name="departurePort" view="_minimal"/>
                <property name="destinationPort" view="_minimal"/>
                <property name="carrier" view="_minimal"/>
                <property name="items" view="_minimal"/>
            </view>
            <loader/>
            <collection id="itemsDc" property="items"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="wayBillDc">
            <column width="350px">
                <textField id="referenceField" property="reference"/>
                <pickerField id="shipperField" property="shipper">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="consigneeField" property="consignee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="departurePortField" property="departurePort">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="destinationPortField" property="destinationPort">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="carrierField" property="carrier">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="totalWeightField" property="totalWeight"/>
                <textField id="totalChargeField" property="totalCharge"/>
            </column>
        </form>
        <groupBox id="itemsBox" caption="msg://com.company.st.entity.waybill/WayBill.items">
            <table id="itemsTable" dataContainer="itemsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <buttonsPanel>
                    <button action="itemsTable.create"/>
                    <button action="itemsTable.edit"/>
                    <button action="itemsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
